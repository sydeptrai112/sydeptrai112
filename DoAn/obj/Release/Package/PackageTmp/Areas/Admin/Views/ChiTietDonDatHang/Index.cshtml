@model IEnumerable<DoAn.Models.ChiTietDonDatHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<h2 style="text-align:center; margin-bottom:20px;">CHI TIẾT ĐƠN ĐẶT HÀNG</h2>

<table class="table">
    <tr>
        
        <th>
           Mã đơn đặt hàng 
        </th>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.MaDDH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>
            @Html.FormatValue(item.DonGia, "{0:#,##0}") VNĐ
        </td>
        <td>
            
        </td>
    </tr>
}

</table>
