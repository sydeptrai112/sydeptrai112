

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/ProductLayout.cshtml";
}
<h4 style="color : red; text-align:center;">@ViewBag.ThongBao</h4>
<div class="account">
    <h1 style="margin-top:-20px;">Account</h1>
    <div class="account-pass">
        <div class="col-md-8 account-top">
            @using (Html.BeginForm("DangNhap", "User"))
            {
               
                @Html.ValidationSummary(true)
                <div>
                    <span>Tên đăng nhập</span>
                    @Html.TextBox("TaiKhoan")
                    @ViewBag.Err1
                </div>
                <div>
                    <span>Password</span>
                    @Html.Password("MatKhau")
                    @ViewBag.Err2
                </div>
                <input type="submit" value="Login">
            }





        </div>
        <div class="col-md-4 left-account ">
            <a href="#"><img class="img-responsive " src="~/Content/HinhAnhDoAn/H1.jpg" alt=""></a>
            <div class="five">
                <h2>25% </h2><span>discount</span>
            </div>
            <a href="@Url.Action("DangKy","User")" class="create">Create an account</a>
            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>

